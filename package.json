{
  "name": "wechat-spider-node",
  "version": "1.0.0",
  "description": "微信公众号爬虫工具 - Node.js TypeScript 版本",
  "type": "module",
  "engines": {
    "node": ">=22.13.0"
  },
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "tsx src/cli/index.ts",
    "build": "tsup",
    "start": "node dist/cli/index.js",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "spider:login": "tsx src/cli/index.ts login",
    "spider:search": "tsx src/cli/index.ts search",
    "spider:scrape": "tsx src/cli/index.ts scrape",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "wechat",
    "spider",
    "scraper",
    "crawler",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^12.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.1",
    "fs-extra": "^11.2.0",
    "json5": "^2.2.3",
    "node-cron": "^3.0.3",
    "p-limit": "^5.0.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "playwright": "^1.41.2",
    "turndown": "^7.1.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^20.11.16",
    "@types/node-cron": "^3.0.11",
    "@types/turndown": "^5.0.4",
    "inquirer": "^12.9.6",
    "prisma": "^5.9.1",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
