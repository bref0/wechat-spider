{
  // ==================== 存储配置 ====================
  // 存储模式: 'database' (数据库)
  "storage": {
    "mode": "database",

    // 数据库存储配置 (mode = 'database' 或 'both' 时生效)
    "database": {
      "type": "mysql",                       // 数据库类型: 'sqlite' | 'mysql' | 'postgresql'
      "url": "",                         // 数据库连接字符串
    }
  },

  // ==================== 爬虫配置 ====================
  "scraper": {
    "requestInterval": 10,              // 请求间隔 (秒) - 建议 10-15 秒
    "maxPages": 50,                     // 默认爬取最大页数
    "days": 30                          // 默认爬取最近多少天
  },

  // ==================== 批量爬取配置 ====================
  "batch": {
    // 公众号列表 (逗号分隔)
    "accounts": [
        "腾讯科技",
        "36氪",
        "新浪科技",
    ],
    "accountInterval": 10                 // 账号间隔 (秒) - 顺序执行,避免被封
  }
}
